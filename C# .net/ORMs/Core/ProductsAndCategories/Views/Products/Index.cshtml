@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Products</title>
</head>
<body>
    <header class="container d-flex flex-column justify-content-center align-items-center">
        <nav class="mb-4">
            <a href="/" class="btn btn-link">Products</a>
            <a href="/categories" class="btn btn-link">Categories</a>
        </nav>
    </header>
    <div class="container d-flex gap-4">
        
        <section class="mb-4 flex-grow-1">
            <h2>New Product</h2>
            <form asp-action="Create" asp-controller="Products" method="post" class="form-inline">
                <div class="form-group mb-2">
                    <label asp-for="Name" class="sr-only"></label>
                    <input asp-for="Name" class="form-control mr-2">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Description" class="sr-only"></label>
                    <input asp-for="Description" class="form-control mr-2">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Price" class="sr-only"></label>
                    <input asp-for="Price" class="form-control mr-2">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success mb-2">Create</button>
            </form>
        </section>
        <section class="mb-4 flex-grow-1">
            <h2>All Products</h2>
            <ul class="list-group">
                @if (ViewBag.products.Count > 0)
                {
                    @foreach (var product in ViewBag.products)
                    {
                        <li class="list-group-item">
                            <a href="/products/@product.ProductId">@product.Name</a>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item">No products available.</li>
                }
            </ul>
        </section>
    </div>
</body>
</html>
