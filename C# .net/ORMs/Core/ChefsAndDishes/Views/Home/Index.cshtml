@model IEnumerable<ChefsAndDishes.Models.Chef>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse d-flex justify-content-center">
            <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item active">
                    <span class="nav-link">Chefs</span>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/dishes">Dishes</a>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/chefs/new">Add a Chef</a>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/dishes/add">Add a Dish</a>
                </li>
            </ul>
        </div>
    </nav>
    <h2 class="text-center mt-4">Check out our roster of chefs!</h2>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Chef chef in Model)
            {
                <tr>
                    <td>@chef.FirstName @chef.LastName</td>
                    <td>
                        @if(chef.DateOfBirth != null)
                        {
                            DateTime now = DateTime.Now;
                            int age = now.Year - chef.DateOfBirth.Year;
                            if (now < chef.DateOfBirth.AddYears(age))
                            {
                                age--;
                            }
                            @age
                        }
                    </td>
                    <td>@chef.Dishes.Count</td>
                </tr>
            }
        </tbody>
    </table>
</div>
