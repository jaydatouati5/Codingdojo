@model IEnumerable<ChefsAndDishes.Models.Dish>

@{
    ViewData["Title"] = "Dishes";
}

<div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse d-flex justify-content-center">
            <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/">Chefs</a>
                </li>
                |
                <li class="nav-item active">
                    <span class="nav-link">Dishes</span>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/chefs/new">Add a Chef</a>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/dishes/add">Add a Dish</a>
                </li>
            </ul>
        </div>
    </nav>
    <h2 class="text-center mt-4">Yum, check out our tasty dishes!</h2>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Chef</th>
                <th>Tastiness</th>
                <th>Calories</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Dish dish in Model)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Chef.FirstName @dish.Chef.LastName</td>
                    <td>
                        @for (int i = 0; i < dish.Tastiness; i++)
                        {
                            <span>‚≠ê</span>
                        }
                    </td>
                    <td>@dish.Calories</td>
                </tr>
            }
        </tbody>
    </table>
</div>
