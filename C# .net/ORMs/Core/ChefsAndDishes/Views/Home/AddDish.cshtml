@model ChefsAndDishes.Models.Dish

@{
    ViewData["Title"] = "Add a Dish";
    var chefs = ViewBag.Chefs as List<ChefsAndDishes.Models.Chef>;
}

<div class="container mt-4">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse d-flex justify-content-center">
            <ul class="navbar-nav d-flex align-items-center">
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/">Chefs</a>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/dishes">Dishes</a>
                </li>
                |
                <li class="nav-item">
                    <a class="nav-link text-primary" href="/chefs/new">Add a Chef</a>
                </li>
                |
                <li class="nav-item active">
                    <span class="nav-link">Add a Dish</span>
                </li>
            </ul>
        </div>
    </nav>
    <h2 class="text-center mt-4">Add a New Dish</h2>
    <hr>
    <form asp-action="AddDish" method="post" class="needs-validation">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Name of Dish</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger d-block " style="min-height: 1.5em; font-size: 0.8rem;"></span>
        </div>
        <div class="form-group">
            <label asp-for="Calories" class="form-label">Number of Calories</label>
            <input asp-for="Calories" class="form-control" type="number" />
            <span asp-validation-for="Calories" class="text-danger d-block" style="min-height: 1.5em; font-size: 0.8rem;"></span>
        </div>
        <div class="form-group">
            <label asp-for="ChefId" class="form-label">Select Chef</label>
            <select asp-for="ChefId" class="form-select">
                <option value="">Select a Chef</option>
                @foreach (var chef in chefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
            </select>
            <span asp-validation-for="ChefId" class="text-danger d-block " style="min-height: 1.5em; font-size: 0.8rem;"></span>
        </div>
        <div class="form-group">
            <label asp-for="Tastiness" class="form-label">Select Tastiness</label>
            <select asp-for="Tastiness" class="form-select">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness" class="text-danger d-block" style="min-height: 1.5em; font-size: 0.8rem;"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add Dish</button>
    </form>
</div>
