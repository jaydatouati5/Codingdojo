<div class="d-flex justify-content-between align-items-center">
    <h1>Welcome @Context.Session.GetString("UserName")</h1>
    
    <a href="logout" class="btn btn-danger">Logout</a>
</div>
<hr>
<h1 class="text-center">@Context.Session.GetInt32("Score")</h1>
<div class="d-flex flex-column gap-2">
    <div class="d-flex gap-2">
        <a href="+1" class="btn btn-warning w-50 d-flex justify-content-center align-items-center" style="height: 150px">+1</a> 
        <a href="-1" class="btn btn-primary w-50 d-flex justify-content-center align-items-center" style="height: 150px">-1</a>
    </div>
    <div class="d-flex gap-2">
        <a href="x2" class="btn btn-danger w-50 d-flex justify-content-center align-items-center" style="height: 150px">X2</a>
        <a href="random" class="btn btn-success w-50 d-flex justify-content-center align-items-center" style="height: 150px">+ Random</a>
    </div>
</div>